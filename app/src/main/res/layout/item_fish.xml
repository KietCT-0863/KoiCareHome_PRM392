<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pond_item_border"
    android:padding="16dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Xóa cá"/>

    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_edit"
        android:layout_toStartOf="@id/icon_delete"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Sửa cá"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toStartOf="@id/icon_edit"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/ivFish"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvFishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên cá"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFishColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Màu: Đỏ"/>

            <TextView
                android:id="@+id/tvFishSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50cm - 5000g"/>

            <TextView
                android:id="@+id/tvPondInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hồ: "/>

            <TextView
                android:id="@+id/tvFoodAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thức ăn: 50g/ngày"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>