<!-- File: res/layout/pond_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pond_item_border"
    android:padding="16dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/icon_delete"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_delete"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:contentDescription="Xóa hồ"/>

    <ImageView
        android:id="@+id/icon_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_edit"
        android:layout_toStartOf="@id/icon_delete"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:padding="4dp"
        android:contentDescription="Sửa hồ"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/icon_edit"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/textViewPondTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ số: 1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewPondVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể tích: 2000 L"/>

        <TextView
            android:id="@+id/textViewPondMineral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lượng khoáng cần: 6.00 kg"/>

        <TextView
            android:id="@+id/textViewPondFishCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng cá: 0"/>

        <TextView
            android:id="@+id/textViewPondFoodAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lượng thức ăn: 0.00 gram/ngày"/>

    </LinearLayout>

</RelativeLayout>